        <div class="w3-center">
            
          <h3><%= product.name %></h3>
          <h5><%= product.activity %></h5>
          
        </div>

        <div class="w3-justify">
         <img src="../<%= product.image %>" alt="<%= product.name %>" style="width:100%" class="w3-padding-16">
         <p><strong>â‚¬<%= product.price %></strong> </p>
         <a href="/show/<%= product.name %>" class="w3-button w3-white w3-border" >Show</a>
         <a href="/edit/<%= product.name %>" class="w3-button w3-white w3-border" >Edit</a>
         <a href="/show/<%= product.name %>" class="w3-button w3-white w3-border" >Delete</a>
         
